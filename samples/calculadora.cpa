int principal(){
	var int x, y;
	var caractere op;
	
	escreva("Escolha a operação (+, -, *, /):\n");
	leia("%c", &op);

	escreva("Escolha os dois operandos:\n");
	leia("%d", &x);
	leia("%d", &y);

	escolha (op){
		caso '+':
			escreva("%i\n", x + y);
			parar;
		caso '-':
			escreva("%i\n", x - y);
			parar;
		caso '*':
			escreva("%i\n", x * y);
			parar;
		caso '/':
			escreva("%i\n", x / y);
			parar;
		cc :
			escreva("Operação inválida\n");
	}
}