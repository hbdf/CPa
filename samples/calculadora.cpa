int principal(){
	var int x, y;
	var caractere op;
	
	leia("%i", &x);
	leia("%c", &op);
	leia("%i", &y);

	escolha (op){
		caso '+':
			escreva("%i\n", x + y);
			parar;
		caso '-':
			escreva("%i\n", x - y);
			parar;
		caso '*':
			escreva("%i\n", x * y);
			parar;
		caso '/':
			escreva("%i\n", x / y);
			parar;
		cc:
			escreva("Operação inválida\n");
	}
}